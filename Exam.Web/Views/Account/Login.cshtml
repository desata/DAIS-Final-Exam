@using Exam.Web.Models.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow" >
            <div class="card-header text-white text-center py-3" style="background-color: #48B">
                <h3 class="mb-0">Login</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />

                    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
                    {
                        <div class="alert alert-danger">
                            @ViewData["ErrorMessage"]
                        </div>
                    }

                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label">Username</label>
                        <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn; btn-lg" style="background-color: #48B; color: white;">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
